{
  "name": "simpledomtracking",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "test": "jest --findRelatedTests --no-cache src/**",
    "generate": "node -r esm scripts/generatePackages.js",
    "postbuild": "node -r esm scripts/postbuild",
    "format": "pretty-quick --pattern 'src/**/*.ts'",
    "build-main": "microbundle --cwd build/main",
    "build-mock": "microbundle --cwd build/mock",
    "build-setAttributes": "microbundle --cwd build/setAttributes",
    "build-all": "yarn build-main && yarn build-mock && yarn build-setAttributes && yarn postbuild"
  },
  "sdtBundles": {
    "main": {
      "src": "index.ts",
      "dist": ""
    },
    "mock": {
      "src": "mock.ts",
      "dist": "mock"
    },
    "setAttributes": {
      "src": "setAttributes.ts",
      "dist": "setAttributes"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern 'src/**/*.ts' && yarn test && yarn build-all"
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "esm": "^3.2.25",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "microbundle": "^0.12.4",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.32.1",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  }
}
